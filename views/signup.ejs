<%- include('header') %>

  <div class="container">
    <form enctype="multipart/form-data" action="/signup" method="POST">
      <div class="form-group">
        <label>用户名</label>
        <input type="text" class="form-control" name="user" placeholder="个人账户">
      </div>

      <div class="form-group">
        <label>密码</label>
        <input type="password" class="form-control" name="pwd" placeholder="密码">
      </div>

      <div class="form-group">
        <label>性别</label>
        <select class="form-control" name="sex">
          <option value="men">男</option>
          <option value="women">女</option>
        </select>
      </div>

      <div class="form-group">
        <label>选择头像</label>
        <input type="file" name="avatar" accept="image/gif,image/jpg,image/png">
      </div>

      <button type="submit" class="btn btn-default btn-lg btn-block">立即注册</button>
    </form>
  </div>

  <%- include('footer') %>