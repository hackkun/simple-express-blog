<%- include('header') %>

  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <img src="/<%= user %>.png" class="img-circle" style="width:160px;height:160px">
      </div>
      <div class="col-md-8">
        <form action="/posts" method="POST">
          <div class="form-group">
            <label>标题</label>
            <input type="text" name="tit" class="form-control">
          </div>
          <div class="form-group">
            <label>内容</label>
            <textarea class="form-control" name="content" cols="30" rows="10"></textarea>
          </div>
          <button type="submit" class="btn btn-default">发布</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('footer') %>